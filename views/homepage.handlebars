<div class="container">
  <div class="row">
    {{#each blogPosts as |blogPost|}}
      <div class="twelve columns mb-4">
        <div class="card border-primary text-dark shadow">
          <div class="card-header">
            <h3>
              <a href="/blogPost/{{blogPost.id}}">{{blogPost.title}}</a>
            </h3>
            <p>Created by {{blogPost.user.name}} on {{format_date blogPost.date_created}}</p>
          </div>
          <div class="card-body">
            <p>{{blogPost.description}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

