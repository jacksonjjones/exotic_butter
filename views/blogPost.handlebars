<div class="container">
    <div class="row">
        <div class="card shadow mb-3">
            <div class="text-center p-3 card-title">
                <h2>{{title}}</h2>
                <p>Created by {{user.name}} on {{format_date date_created}}</p>
                <p>{{description}}</p>
                <button class="button-primary" id="editBtn">Edit</button>
                <button class="button-primary" id="deleteBtn">Delete</button>
            </div>

            <div class="text-center">
                <h3>Comments</h3>
                {{#each comments as |comment| }}
                    <div class="card shadow p-3 mb-2">
                        <p>{{comment.comment_body}} by {{comment.user.name}} on {{format_date comment.date_created}}</p>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

{{> comment-form }}

<script src="/js/newCommentHandler.js"></script>
<script src="/js/deleteBlogPost.js"></script>
<script src="/js/editBlogPost.js"></script>

