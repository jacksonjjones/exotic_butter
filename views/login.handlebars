<div class="container">
  <div class="row">
    <div class="six columns">
      <h2>Login</h2>
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input class="u-full-width" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="u-full-width" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="button-primary" type="submit">Login</button>
        </div>
      </form>
    </div>

    <div class="six columns">
      <h2>Signup</h2>
      <form class="form signup-form">
         <div class="form-group">
          <label for="name-signup">Name:</label>
          <input class="u-full-width" type="text" id="name-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup">Email:</label>
          <input class="u-full-width" type="text" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="u-full-width" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="button-primary" type="submit">Signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>
